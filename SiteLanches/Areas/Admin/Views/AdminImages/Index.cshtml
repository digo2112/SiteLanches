<table>
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="UploadFiles">
                <img src="~/images/upload.png" width="200" height="150" />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Selecione um ou mais aqruivos para enviar:  </b></p>
                        <p>(Arquivos com o mesmo nome serão sobrescritos)</p>
                        <input type="file" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivo(s)" class="button btn-outline-primary" />
                    </div>
                </div>
            </form>

            <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="GetImages">
                <img src="~/images/visualizar.jpg" width="200" height="150" />
                <div class="form-group">
                    <div class="col-md-10">
                        <strong><strong>Visualizar pasta no servidor </strong></strong>
                        <input type="file" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar arquivos no servidor" class="button btn-outline-warning" />
                    </div>
                </div>
            </form>

        </td>

    </tr>

</table>

<div class="container"> 
    @if(ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }

</div>